<div class="container row">
	<ul class="nav nav-tabs">
		<li role="presentation"><%= link_to "index", root_path %></li>
		<li role="presentation" class="active"><%= link_to "newest", feeds_restaurants_path %></li>
		<li role="presentation"><%= link_to "Top 10", ranking_restaurants_path %></li>
	</ul>
</div>

<br>

<div class="container">
	<div class="row">

		<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">

			<h1>newest restaurant moving</h1>
			<hr>

			<div class=" col-md-6 col-sm-6 col-xs-12">
				<div class="panel panel-default">
					
					<div class="panel-heading">newest restaurants</div>

					<div class="panel-body">
						<% @recent_restaurants.each do |restaurant| %>
							<h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
							<p><small><%= restaurant.category.name %></small></p>
							<p><%= truncate(restaurant.description, length: 80) %></p>
							<hr>
						<% end %>
					</div>
				</div>
			</div>

			<div class="col-md-6 col-sm-6 col-xs-12">
				<div class="panel panel-default">

					<div class="panel-heading">newest comments</div>

					<div class="panel-body">
						<% @recent_comments.each do |comment| %>
							<h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
							<p><%= truncate(comment.content, length:80) %></p>
							<p><small>- by <%= link_to comment.user.name, user_path(comment.user)  %></small></p>
							<hr>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>