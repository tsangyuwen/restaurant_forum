<ul class="nav nav-tabs">
	<li role="presentation" class="active"><%= link_to "index", root_path %></li>
	<li role="presentation" class="active"><%= link_to "newest", feeds_restaurants_path %></li>
</ul>

<div class="container">

	<h1>newest restaurant moving</h1>

	<div class="panel panel-default col-md-5 col-sm-5 col-xs-12 feed-style">
		<div class="panel-heading"><h3>newest restaurants</h3></div>

		<div class="panel-body">
			<% @recent_restaurants.each do |restaurant| %>
				<h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
				<p><%= restaurant.category.name %></p>
				<p><%= restaurant.description %></p>
				<hr>
			<% end %>
		</div>

	</div>

	<div></div>

	<div class="panel panel-default col-md-5 col-sm-5 col-xs-12 feed-style">
		<div class="panel-heading"><h3>newest comments</h3></div>

		<div class="panel-body">
			<% @recent_comments.each do |comment| %>
				<h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
				<p><%= comment.content %></p>
				<p>by <%= link_to comment.user.name, user_path(comment.user)  %></p>
				<hr>
			<% end %>
		</div>

	</div>
</div>