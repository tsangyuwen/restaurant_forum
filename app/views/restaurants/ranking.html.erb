<div class="container row">
	<ul class="nav nav-tabs">
		<li role="presentation"><%= link_to "index", root_path %></li>
		<li role="presentation"><%= link_to "newest", feeds_restaurants_path %></li>
		<li role="presentation" class="active"><%= link_to "Top 10", ranking_restaurants_path %></li>
	</ul>
</div>

<br>

<div class="container">
	<div class="row">

		<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">

			<h1>Top 10 restaurant<small>(highest favorite)</small></h1>
			<hr>

			<div>
				<% @top_restaurants.each do |restaurant| %>
					<%= image_tag restaurant.image, class: "img-responsive center-block" %>
					<h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
					<p><%= truncate(restaurant.description, length: 80) %></p>
					<%= link_to 'Show', restaurant_path(restaurant), class: "btn btn-primary" %>
					<%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>